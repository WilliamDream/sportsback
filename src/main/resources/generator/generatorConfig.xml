<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application-dev.properties"/>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!--<plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.montnets.imcomp.util.MyMapper"/>
        </plugin>-->

        <!-- å»æçæçæ³¨è§£-->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.data-username}"
                        password="${spring.datasource.password}">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.letansuo.sportsback.biz.classes.model" targetProject="src/main/java"/>

        <!-- xml -->
        <sqlMapGenerator targetPackage="mapper.classes" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.letansuo.sportsback.biz.classes.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="d_class" domainObjectName="Class">
            <!--mysql éç½®-->
            <generatedKey column="classId" sqlStatement="JDBC" identity="true"/>
            <!--oracle éç½®-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
    </context>
</generatorConfiguration>